{
  "name": "obsidian.css",
  "version": "2.0.0",
  "description": "Modular CSS",
  "keywords": [
    "css",
    "modular css",
    "postcss"
  ],
  "main": "lib/index.css",
  "scripts": {
    "start": "npm run styles",
    "styles": "postcss -c postcss.json -w",
    "build": "npm-run-all styles lint",
    "postlint": "npm run lint && npm run info",
    "styles:min": "postcss -c postcss.json",
    "styles:unminified": "postcss -u postcss-import -u postcss-apply -u postcss-cssnext -o ./dist/obsidian.css ./lib/index.css",
    "styles:raw": "postcss -u postcss-import -o ./dist/obsidian.raw.css ./lib/index.css",
    "prepublish": "npm-run-all styles:*",
    "lint": "stylelint './lib/**/*.css'",
    "size": "gzip-size ./dist/obsidian.min.css | pretty-bytes",
    "stats": "parker ./dist/obsidian.min.css",
    "browsers": "doiuse --browsers 'last 1 versions' ./dist/obsidian.min.css",
    "info": "npm run browsers && npm run size && npm run stats",
    "clean": "del ./dist",
    "docs": "kss-node --config ./kss.json",
    "serve": "browser-sync start --server './build/' --files './*'"
  },
  "author": "charles peters <charlespeters42@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/obsidiancss/obsidian.git"
  },
  "bugs": {
    "url": "https://github.com/obsidiancss/obsidian/issues"
  },
  "homepage": "https://github.com/obsidiancss/obsidian#readme",
  "devDependencies": {
    "browser-sync": "^2.12.5",
    "cssnano": "^3.7.0",
    "del-cli": "^0.2.0",
    "doiuse": "^2.3.0",
    "gzip-size-cli": "^1.0.0",
    "kss": "^3.0.0-beta.14",
    "npm-run-all": "^2.1.1",
    "parker": "0.0.10",
    "postcss-apply": "^0.2.0",
    "postcss-cli": "^2.5.2",
    "postcss-cssnext": "^2.5.2",
    "postcss-export-vars": "^0.2.0",
    "postcss-import": "^8.1.0",
    "pretty-bytes-cli": "^1.0.0",
    "stylelint": "^6.5.1",
    "stylelint-selector-bem-pattern": "^1.0.0"
  }
}
