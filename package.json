{
  "name": "obsidian.css",
  "version": "2.0.0",
  "description": "Modular CSS",
  "main": "lib/index.css",
  "scripts": {
    "start": "npm run styles",
    "styles": "postcss -c postcss.json -w",
    "copy": "mkdir build && cat ./dist/obsidian.min.css > ./build/bundle.css",
    "poststyles": "npm run copy && npm run lint && npm run info",
    "lint": "stylelint './lib/**/*.css'",
    "info": "doiuse --browsers 'last 1 versions' ./dist/obsidian.min.css && parker ./dist/obsidian.min.css",
    "clean": "del ./build",
    "docs": "kss-node --config ./kss.json"
  },
  "author": "charles peters <charlespeters42@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/obsidiancss/obsidian.git"
  },
  "bugs": {
    "url": "https://github.com/obsidiancss/obsidian/issues"
  },
  "homepage": "https://github.com/obsidiancss/obsidian#readme",
  "devDependencies": {
    "browser-sync": "^2.12.5",
    "cssnano": "^3.7.0",
    "del-cli": "^0.2.0",
    "doiuse": "^2.3.0",
    "kss": "^3.0.0-beta.14",
    "parker": "0.0.10",
    "postcss-apply": "^0.2.0",
    "postcss-cli": "^2.5.2",
    "postcss-cssnext": "^2.5.2",
    "postcss-import": "^8.1.0",
    "stylelint": "^6.5.1",
    "stylelint-selector-bem-pattern": "^1.0.0"
  }
}
