{
  "name": "obsidian.css",
  "version": "3.0.0-0",
  "description": "A Modular CSS Library",
  "keywords": [
    "css",
    "modular css",
    "postcss"
  ],
  "main": "lib/index.css",
  "scripts": {
    "start": "npm run build:dev",
    "styles:prod": "postcss -c .postcss.prod.json",
    "build:prod": "npm-run-all clean styles lint info:*",
    "build:dev": "npm-run-all --parallel serve watch",
    "watch": "watch 'npm run styles:dev' lib",
    "lint": "wilco './lib/**/*.css'",
    "info": "npm-run-all lint info:*",
    "info:size": "gzip-size ./dist/obsidian.min.css | pretty-bytes",
    "clean": "del ./dist && del docs/index.html",
    "styles": "postcss lib/index.css -o dist/obsidian.dev.css"
  },
  "author": "charles peters <charlespeters42@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/charlespeters/obsidian.git"
  },
  "bugs": {
    "url": "https://github.com/charlespeters/obsidian/issues"
  },
  "homepage": "https://github.com/charlespeters/obsidian#readme",
  "devDependencies": {
    "autoprefixer": "^6.5.3",
    "cssnano": "^3.7.4",
    "del-cli": "^0.2.0",
    "gzip-size-cli": "^1.0.0",
    "immutable-css": "^1.1.2",
    "npm-run-all": "^3.0.0",
    "postcss-apply": "^0.8.0",
    "postcss-cli": "^4.1.0",
    "postcss-cssstats": "^1.0.0",
    "postcss-custom-media": "^6.0.0",
    "postcss-custom-properties": "^6.1.0",
    "postcss-export-vars": "^0.2.0",
    "postcss-import": "^10.0.0",
    "postcss-media-minmax": "^2.1.2",
    "postcss-reporter": "2.0.0",
    "postcss-style-guide": "^0.14.0",
    "pretty-bytes-cli": "^1.0.0",
    "watch": "1.0.1",
    "wilco": "^0.2.0"
  },
  "postcss": {
    "map": false,
    "plugins": {
      "postcss-import": {
        "skipDuplicates": true
      },
      "postcss-export-vars": {
        "file": "css",
        "type": "json",
        "matches": []
      },
      "autoprefixer": {
        "remove": true
      },
      "postcss-custom-media": {},
      "postcss-media-minmax": {},
      "postcss-custom-properties": {
        "preserve": true,
        "appendVariables": true
      },
      "postcss-apply": {},
      "postcss-reporter": {
        "clearMessages": true
      },
      "@charlespeters/postcss-style-guide": {
        "project": "Obsidian.css",
        "showCode": true,
        "src": "lib/index.css",
        "dest": "docs/index.html",
        "themePath": "docs",
        "outputCSS": "dist/obsidian.dev.css"
      }
    }
  },
  "stylelint": {
    "extends": "stylelint-config-wilco"
  },
  "browserslist": ["last 1 versions"]
}
