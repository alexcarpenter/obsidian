{
  "name": "obsidian.css",
  "version": "3.0.0-0",
  "description": "A Modular CSS Library",
  "keywords": [
    "css",
    "modular css",
    "postcss"
  ],
  "main": "lib/index.css",
  "browser": "dist/obsidian.min.css",
  "scripts": {
    "style": "postcss src/index.css -o dist/obsidian.css",
    "prepublish": "yarn clean",
    "lint": "stylelint './src/**/*.css'",
    "clean": "del ./dist",
    "dev": "yarn style -w",
    "prebuild": "yarn clean && yarn style",
    "build": "postcss dist/obsidian.css -u cssnano > dist/obsidian.min.css"
  },
  "author": "charles peters <charlespeters42@gmail.com>",
  "license": "MIT",
  "repository": "charliewilco/obsidian.css",
  "bugs": {
    "url": "https://github.com/charlespeters/obsidian/issues"
  },
  "homepage": "https://obsidian.charlespeters.net",
  "devDependencies": {
    "css-mqpacker": "^7.0.0",
    "cssnano": "^4.0.4",
    "del-cli": "^1.1.0",
    "postcss-cli": "^6.0.0",
    "postcss-color-function": "^4.0.0",
    "postcss-import": "^11.1.0",
    "postcss-preset-env": "^5.3.0",
    "postcss-reporter": "^5.0.0",
    "stylelint": "^9.4.0",
    "stylelint-config-wilco": "^1.0.2"
  },
  "postcss": {
    "map": false,
    "plugins": {
      "postcss-import": {
        "skipDuplicates": true
      },
      "postcss-preset-env": {
        "stage": 0,
        "autoprefixer": {
          "remove": true
        }
      },
      "css-mqpacker": {
        "sort": true
      }
    }
  },
  "browserslist": [
    "last 1 versions"
  ],
  "stylelint": {
    "extends": "stylelint-config-wilco"
  },
  "cssnano": {
    "preset": [
      "default",
      {
        "discardComments": {
          "removeAllButFirst": true
        }
      }
    ]
  }
}
