{
  "name": "obsidian.css",
  "version": "3.0.0-0",
  "description": "A Modular CSS Library",
  "keywords": [
    "css",
    "modular css",
    "postcss"
  ],
  "main": "lib/index.css",
  "browser": "dist/obsidian.min.css",
  "scripts": {
    "prepublish": "npm run clean",
    "lint": "stylelint './src/**/*.css'",
    "clean": "del ./dist; del docs/index.html",
    "dev": "postcss src/index.css",
    "build": "NODE_ENV='production' postcss src/index.css -c postcss.config.prod.json -o dist/obsidian.min.css"
  },
  "author": "charles peters <charlespeters42@gmail.com>",
  "license": "MIT",
  "repository": "charliewilco/obsidian.css",
  "bugs": {
    "url": "https://github.com/charlespeters/obsidian/issues"
  },
  "homepage": "https://obsidian.charlespeters.net",
  "devDependencies": {
    "css-mqpacker": "^7.0.0",
    "cssnano": "^4.0.4",
    "del-cli": "^1.1.0",
    "postcss-cli": "^6.0.0",
    "postcss-color-function": "^4.0.0",
    "postcss-export-vars": "^0.2.0",
    "postcss-gzip": "^1.0.0",
    "postcss-import": "^11.1.0",
    "postcss-mdgx": "^0.14.0",
    "postcss-preset-env": "^5.3.0",
    "postcss-reporter": "^5.0.0",
    "stylelint": "^9.4.0",
    "stylelint-config-wilco": "^1.0.2",
    "wilco": "^0.2.0"
  },
  "postcss": {
    "map": false,
    "plugins": {
      "postcss-import": {
        "skipDuplicates": true
      },
      "postcss-preset-env": {
        "stage": 3,
        "autoprefixer": {
          "remove": true
        },
        "custom-properties": {
          "preserve": true
        }
      }
    }
  },
  "browserslist": [
    "last 1 versions"
  ],
  "stylelint": {
    "extends": "stylelint-config-wilco"
  }
}
